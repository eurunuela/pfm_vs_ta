  issue           = {9},
  keywords        = {conceptual organization of methods; dynamic functional connectivity; fMRI; human behavior; time-resolved methods},
  nlm-id          = {7808616},
  owner           = {NLM},
  pii             = {S0166-2236(20)30147-8},
  pmid            = {32682563},
  pubmodel        = {Print-Electronic},
  pubstate        = {ppublish},
  revised         = {2020-10-30},
}

@Article{Preti2017,
