  keywords        = {Brain, physiology; Brain Mapping, methods; Humans; Image Processing, Computer-Assisted, methods; Magnetic Resonance Imaging, methods; Models, Neurological; Classification analysis; Decoding; Functional magnetic resonance imaging; MVPA; Rapid event-related design},
  nlm-id          = {9215515},
