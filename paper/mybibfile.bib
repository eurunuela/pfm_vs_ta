  issn-linking    = {1053-8119},
  keywords        = {Brain, anatomy & histology, physiology; Connectome, methods; Image Processing, Computer-Assisted, methods; Magnetic Resonance Imaging, methods; Neural Pathways, anatomy & histology, physiology; Dynamic functional connectivity; Dynamic graph analysis; Frame-wise description; Sliding window analysis; State characterization; Temporal modeling; Time/frequency analysis},
  nlm-id          = {9215515},
  owner           = {NLM},
  pii             = {S1053-8119(16)30788-1},
  pmid            = {28034766},
  pubmodel        = {Print-Electronic},
  pubstate        = {ppublish},
  revised         = {2018-09-07},
}

@Article{Keilholz2017,
