  keywords        = {Algorithms; Artifacts; Bayes Theorem; Brain, physiology; Cerebrovascular Circulation, physiology; Computer Simulation; Electroencephalography; Hemodynamics, physiology; Humans; Magnetic Resonance Imaging; Membrane Potentials, physiology; Models, Neurological; Monte Carlo Method; Neurons, physiology; Nonlinear Dynamics; Oxygen, blood; Signal Processing, Computer-Assisted},
  nlm-id          = {101285081},
  owner           = {NLM},
  pii             = {PONE-D-16-18409},
  pmc             = {PMC5519212},
  pmid            = {28727850},
