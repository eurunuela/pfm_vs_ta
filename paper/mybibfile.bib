  file = {/Users/enekourunuela/Library/Mobile Documents/com~apple~CloudDocs/Papers/Caballero Gaudes et al/Caballero Gaudes et al. - 2013 - Paradigm free mapping with sparse regression autom.pdf},
  journal = {Human Brain Mapping},
  keywords = {Brain mapping,{{fMRI}},Paradigm free mapping,Single-trial analysis,Sparse regression}
}

