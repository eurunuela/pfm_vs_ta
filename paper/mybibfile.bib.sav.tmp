}

@article{Keilholz2017TimeResolvedResting,
  author          = {Shella Keilholz and Cesar Caballero-Gaudes and Peter Bandettini and Gustavo Deco and Vince Calhoun},
  journal         = {Brain Connectivity},
  title           = {Time-Resolved Resting-State Functional Magnetic Resonance Imaging Analysis: Current Status, Challenges, and New Directions},
  year            = {2017},
