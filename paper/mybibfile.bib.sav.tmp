@article{Bush2013Decodingneuralevents,
  author          = {Keith Bush and Josh Cisler},
  journal         = {Magnetic Resonance Imaging},
  title           = {Decoding neural events from {fMRI} {BOLD} signal: A comparison of existing approaches and development of a new algorithm},
