@Article{Kinany2020DynamicFunctionalConnectivity,
  author    = {Kinany, Nawal and Pirondini, Elvira and Micera, Silvestro and Van De Ville, Dimitri},
  journal   = {Neuron},
  title     = {Dynamic Functional Connectivity of Resting-State Spinal Cord {fMRI} Reveals Fine-Grained Intrinsic Architecture},
  year      = {2020},
