@article{Ciuciu2003Unsupervisedrobustnonparametric,
  author          = {Ciuciu, Philippe and Poline, Jean-Baptiste and Marrelec, Guillaume and Idier, Jérôme and Pallier, Christophe and Benali, Habib},
