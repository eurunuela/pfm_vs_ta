@article{Finn2020Moviewatchingoutperforms,
  author    = {Emily S. Finn and Peter A. Bandettini},
  journal   = {bioRxiv},
  title     = {Movie-watching outperforms rest for functional connectivity-based prediction of behavior},
  year      = {2020},
  month     = {aug},
  pages     = {2020.08.23.263723-2020.08.23.263723},
  abstract  = {6 A major goal of human neuroscience is to relate differences in brain function to differences in 7 behavior across people. Recent work has established that whole-brain functional connectivity 8 patterns are relatively stable within individuals and unique across individuals, and that features of 9 these patterns predict various traits. However, while functional connectivity is most often 10 measured at rest, certain tasks may enhance individual signals and improve sensitivity to 11 behavioral differences. Here, we show that compared to the resting state, functional connectivity 12 measured during naturalistic viewing-i.e., movie watching-yields more accurate predictions of 13 trait-like phenotypes in the both cognitive and emotional domains. Traits could be predicted using 14 less than three minutes of data from single video clips, and clips with highly social content gave 15 the most accurate predictions. Results suggest that naturalistic stimuli amplify individual 16 differences in behaviorally relevant brain networks.},
  doi       = {10.1101/2020.08.23.263723},
