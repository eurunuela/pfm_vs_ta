  keywords        = {Adolescent; Adult; Brain, physiology; Brain Mapping; Cluster Analysis; Female; Humans; Male; Nerve Net, physiology; Principal Component Analysis; Protein Interaction Mapping; Rest, physiology; Young Adult},
  nlm-id          = {101285081},
