@article{Urunuela2020StabilityBasedSparse,
  author    = {Eneko Uruñuela and Stephen Jones and Anna Crawford and Wanyong Shin and Sehong Oh and Mark Lowe and Cesar Caballero-Gaudes},
  journal   = {Proceedings of the Annual International Conference of the IEEE Engineering in Medicine and Biology Society, EMBS},
  title     = {Stability-Based Sparse Paradigm Free Mapping Algorithm for Deconvolution of Functional {MRI} Data},
