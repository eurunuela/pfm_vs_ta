@Article{Karahanoglu2011SignalProcessingApproach,
  author    = {Karahanoglu, Fikret I{\c{s}}{\i}k and Bayram, {\.{I}}lker and Van De Ville, Dimitri},
  journal   = {{IEEE} Transactions on Signal Processing},
